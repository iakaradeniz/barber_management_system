@{
}
@model List<barber_management_system.Models.Musteri>
<h1>Müsteriler</h1>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Ad</th>
            <th>Soyad</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var musteri in Model)
        {
            <tr>
                <td>@musteri.MusteriID</td>
                <td>@musteri.MusteriAd</td>
                <td>@musteri.MusteriSoyAd</td>
                <td><a class="btn btn-primary" asp-controller="Müsteri" asp-action="Edit" asp-route-id="@musteri.MusteriID">Edit</a></td>

            </tr>
        }
    </tbody>
</table>
<td><a class="btn btn-primary" asp-controller="Müsteri" asp-action="Add">Add</a></td>
