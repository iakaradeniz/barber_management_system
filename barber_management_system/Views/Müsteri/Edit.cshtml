@{
}
@model barber_management_system.Models.Musteri


<h1>Müsteri Güncelleme</h1>

@if(Model is null)
{
    <p>Müsteri Bulunamadı</p>

}
else
{
<form method="post">

    <div class="mt-3">
        <label class="form-label" >Id</label>
            <input type="text" class="form-control" asp-for="MusteriID" readonly />
    </div>

    <div class="mt-3">
        <label class="form-label">Ad</label>
            <input type="text" class="form-control" asp-for="MusteriAd" />
    </div>

    <div class="mt-3">
        <label class="form-label">Soyad</label>
            <input type="text" class="form-control" asp-for="MusteriSoyAd" />
    </div>


   

    <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>

            <button type="submit" class="btn btn-danger ms-3"asp-controller="Müsteri"asp-action="Delete">Delete</button>
    </div>

</form>
}
