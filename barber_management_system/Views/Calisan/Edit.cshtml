@model barber_management_system.Models.Calisan

<h1>Çalışan Güncelleme</h1>

@if (Model is null)
{
    <p>Çalışan Bulunamadı</p>
}
else
{
    <form method="post">
        <div class="mt-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" asp-for="CalisanID" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">Ad</label>
            <input type="text" class="form-control" asp-for="CalisanAd" />
        </div>

        <div class="mt-3">
            <label class="form-label">Soyad</label>
            <input type="text" class="form-control" asp-for="CalisanSoyad" />
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>

            <button type="submit" class="btn btn-danger ms-3" asp-controller="Calisan" asp-action="Delete">Delete</button>
        </div>

       
    </form>

    
}
